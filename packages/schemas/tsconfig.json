{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
        "outDir": "./dist",
		"lib": ["es2022"]
	},
    "exclude": [
        "node_modules",
        "dist"
    ]
}